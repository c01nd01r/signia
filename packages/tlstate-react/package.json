{
	"name": "@tldraw/tlstate-react",
	"private": false,
	"description": "A tiny little drawing app (reactive state management).",
	"version": "0.0.1-alpha.4",
	"author": "tldraw GB Ltd.",
	"homepage": "https://tldraw.dev",
	"repository": {
		"type": "git",
		"url": "https://github.com/tldraw/tldraw"
	},
	"bugs": {
		"url": "https://github.com/tldraw/tldraw/issues"
	},
	"main": "./src/index.ts",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.mjs",
	"files": [
		"./dist/**"
	],
	"scripts": {
		"test": "jest --passWithNoTests",
		"test:coverage": "jest --coverage",
		"clean": "rm -rf .turbo node_modules dist tsconfig.tsbuildinfo",
		"typecheck": "tsc --build",
		"typecheck:force": "tsc --build --force",
		"api:build": "api-extractor run --local",
		"prepack": "../../scripts/build-package.mjs"
	},
	"dependencies": {
		"@tldraw/tlstate": "0.0.1-alpha.4"
	},
	"devDependencies": {
		"@swc/core": "^1.2.204",
		"@swc/jest": "^0.2.21",
		"@types/react": "^18.0.24"
	},
	"jest": {
		"preset": "config/jest/node",
		"setupFilesAfterEnv": [
			"./setupJest.js"
		],
		"moduleNameMapper": {
			"^~(.*)": "<rootDir>/src/$1"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!(nanoid)/)"
		]
	},
	"peerDependencies": {
		"react": "^18"
	}
}
