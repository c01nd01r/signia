{
	"name": "@tldraw/tlstate-monorepo",
	"private": true,
	"description": "A tiny little state managment library (monorepo).",
	"version": "0.0.0",
	"author": "tldraw GB Ltd.",
	"homepage": "https://tldraw.dev",
	"repository": {
		"type": "git",
		"url": "https://github.com/tldraw/tlstate"
	},
	"bugs": {
		"url": "https://github.com/tldraw/tlstate/issues"
	},
	"workspaces": [
		"examples/*",
		"packages/*"
	],
	"scripts": {
		"build": "cross-env FORCE_COLOR=1 turbo run build",
		"dev": "cross-env FORCE_COLOR=1 turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx}\"",
		"clean": "turbo run clean --no-cache --parallel && rm -rf node_modules",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck"
	},
	"engines": {
		"npm": ">=7.0.0"
	},
	"packageManager": "yarn@1.22.17",
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json}": [
			"prettier --write",
			"eslint"
		]
	},
	"devDependencies": {
		"@types/glob": "^8.0.1",
		"@types/jest": "^29.4.0",
		"@types/node": "18.7.3",
		"@types/react": "^18.0.24",
		"@types/react-dom": "^18.0.6",
		"@types/react-test-renderer": "^18.0.0",
		"@typescript-eslint/eslint-plugin": "^5.38.0",
		"@typescript-eslint/parser": "^5.38.0",
		"cross-env": "^7.0.3",
		"esbuild": "^0.17.5",
		"eslint": "8.22.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-no-only-tests": "^2.6.0",
		"eslint-plugin-react": "7.28.0",
		"glob": "^8.1.0",
		"gzip-size": "^7.0.0",
		"jest": "^29.4.1",
		"kleur": "^4.1.5",
		"prettier": "^2.7.1",
		"prettier-plugin-jsdoc": "^0.4.2",
		"prettier-plugin-organize-imports": "^3.1.1",
		"react-test-renderer": "^18.2.0",
		"rimraf": "^4.1.2",
		"turbo": "^1.6.3",
		"typescript": "^4.9.4"
	}
}
